{%- if title -%}
  {%- assign pageTitle = title -%}
{%- else -%}
  {%- assign pageTitle = metadata.title -%}
{%- endif -%}
{%- if description -%}
  {%- assign pageDescription = description -%}
{%- else -%}
  {%- assign pageDescription = metadata.description -%}
{%- endif -%}
{%- if pageTitle == 'Home' -%}
  {%- assign contentType = 'website' -%}
{%- else -%}
  {%- assign contentType = 'article' -%}
{%- endif -%}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {%- if eleventyExcludeFromCollections -%}
    <meta name="robots" content="noindex">
    {%- endif %}
    <meta name="title" content="{{ pageTitle }}">
    <meta name="description" content="{{ pageDescription }}">
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="{{ contentType }}">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:title" content="{{ pageTitle }}">
    <meta property="og:description" content="{{ pageDescription }}">
    {%- comment -%}<meta property="og:image" content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png">{%- endcomment %}
    <!-- Twitter -->
    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="twitter:title" content="{{ pageTitle }}">
    <meta property="twitter:description" content="The article description">
    {%- comment -%} <meta property="twitter:image" content="https://metatags.io/assets/meta-tags-16a33a6a8531e519cc0936fbba0ad904e52d35f34a46c97a2c9f6f7dd7d336f2.png">{%- endcomment %}
    <title>{{ pageTitle }}</title>
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="preload" href="/fonts/Barlow-Regular.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="preload" href="/fonts/Barlow-Bold.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="preload" href="/fonts/Redaction-Regular.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="preload" href="/fonts/Redaction-Italic.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="preload" href="/fonts/Redaction-Bold.woff2" as="font" type="font/woff2" crossorigin> 
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <div role="document">
      {% include 'partials/global-header' %}
      <main class="main-content" role="main">
        {{ content }}
      </main>
      {% include 'partials/global-footer' %}
    </div>
    <script async defer type="text/javascript" src="/js/main.js" charset="utf-8"></script>
  </body>
</html>
