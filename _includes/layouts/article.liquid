---
layout: layouts/base.liquid
---
{%- if post -%}
  {%- assign articleDate = post.date -%}
  {%- assign articleTitle = post.data.title -%}
  {%- assign articleLink = post.url -%}
{%- else -%}
  {%- assign articleDate = page.date -%}
  {%- assign articleTitle = title -%}
  {%- assign articleLink = false -%}
{%- endif -%}
<article>
  <header>
  {% include 'partials/article-title' %}
  </header>
  {% if note -%}
    {% include 'partials/article-note' %}
  {%- endif %}
  {% include 'partials/article-content' %}
  {% include 'partials/article-footer' %}
</article>
