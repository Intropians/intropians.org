---
layout: layouts/base.liquid
---
{%- if collections.time -%}
  {% include 'partials/series-container' series: collections.time %}
{%- endif -%}

{%- if collections.death -%}
  {% include 'partials/series-container' series: collections.death %}
{%- endif -%}

{%- if collections.psychadelic -%}
  {% include 'partials/series-container' series: collections.psychadelic %}
{%- endif -%}

{%- if collections.post -%}
{%- assign postslist = collections.post | reverse -%}
{% for post in postslist -%}
  {% include 'partials/article-list-item' %}
{%- endfor %}
<hr class="global-hr global-hr--constrained">
{%- endif -%}

<article class="article">
{% include 'partials/article-header' title: metadata.title, invisible: true %}
{% include 'partials/article-excerpt' excerpt: wtf_excerpt %}
{% include 'partials/article-content' content %}
{% include 'partials/article-footer' author: wtf_author %}
</article>